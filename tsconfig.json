{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "lib": [
      "ES2022",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
