{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/indent": ["warn", 4],
        "max-len": ["warn", 120],
        "no-trailing-spaces": "off",
        "no-useless-return": "off"
    }
}
